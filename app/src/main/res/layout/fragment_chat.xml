<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".communication.fragments.ChatFragment">

<data>
    <variable
        name="viewModel"
        type="com.team25.event.planner.communication.viewmodel.MyChatMessageViewModel" />
    <variable
        name="blockViewModel"
        type="com.team25.event.planner.communication.viewmodel.BlockViewModel" />
</data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Chat Header -->
        <LinearLayout
            android:id="@+id/chat_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/chat_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.receiverName}"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/block_user_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_block_user"
                android:layout_marginRight="15sp"
                android:onClick="@{() -> blockViewModel.blockUser()}"
                android:background="?android:attr/selectableItemBackground"
                app:tint="@color/accent_red" />

            <ImageButton
                android:id="@+id/scroll_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_upward"
                android:layout_marginRight="15sp"
                android:onClick="@{() -> viewModel.scrollUp()}"
                android:background="?android:attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/scroll_down_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_downward"
                android:layout_marginRight="15sp"
                android:onClick="@{() -> viewModel.scrollDown()}"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>

        <!-- Chat Messages -->
        <ScrollView
            android:id="@+id/chat_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chat_header"
            android:paddingVertical="8dp">

            <LinearLayout
                android:id="@+id/chat_messages_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


            </LinearLayout>
        </ScrollView>

        <!-- Chat Input -->
        <LinearLayout
            android:id="@+id/chat_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/message_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type a message..."
                android:text="@={viewModel.message}" />

            <ImageButton
                android:id="@+id/send_button"
                android:layout_width="53dp"
                android:layout_height="45dp"
                android:contentDescription="Send message"
                android:src="@drawable/send_icon" />
        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingSpinner"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="16dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_animation"
            app:lottie_colorFilter="?attr/colorPrimary" />
    </RelativeLayout>
</layout>