<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="review"
            type="com.team25.event.planner.review.model.ReviewCard" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        app:cornerRadius="8dp"
        android:elevation="4dp"
        android:id="@+id/review_card"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@color/secondary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary">


                <TextView
                    android:id="@+id/review_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{review.firstName + ' ' + review.lastName }"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:width="180dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="10dp" />

                <TextView
                    android:id="@+id/review_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{review.comment}"
                    android:layout_below="@id/review_user"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:paddingStart="10dp" />

                <TextView
                    android:id="@+id/review_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{review.rating}"
                    android:layout_below="@id/review_comment"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:paddingStart="10dp" />

                <TextView
                    android:id="@+id/notification_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:formattedDateTime="@{review.createdDate}"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_below="@id/review_rating"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
