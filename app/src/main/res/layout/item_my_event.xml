<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="event"
            type="com.team25.event.planner.event.model.EventCard" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        app:cornerRadius="8dp"
        android:elevation="4dp"
        android:id="@+id/event_card_item"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@color/secondary">

            <ImageView
                android:id="@+id/home_event_picture"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                android:background="@color/primary"
                android:contentDescription="@string/event_picture"
                android:scaleType="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary">


                <TextView
                    android:id="@+id/home_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{event.name}"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:width="180dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="10dp" />

                <TextView
                    android:id="@+id/home_event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@{event.country + ',' + event.city}"
                    android:layout_below="@id/home_event_name"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:paddingStart="10dp" />

                <ImageView
                    android:id="@+id/home_event_location_image"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/home_event_name"
                    android:layout_toEndOf="@id/home_event_location"
                    android:contentDescription="@string/location_icon"
                    android:scaleType="fitStart" />

                <TextView
                    android:id="@+id/home_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{event.startDateTime.toLocalDate().toString()}"
                    android:layout_below="@id/home_event_name"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:paddingEnd="10dp" />

                <TextView
                    android:id="@+id/home_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{event.startDateTime.toLocalTime().toString()}"
                    android:layout_below="@id/home_event_date"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_marginEnd="25dp" />
            </RelativeLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
