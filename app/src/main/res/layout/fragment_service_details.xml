<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".product_service.fragments.ServiceDetailsFragment">

    <data>
        <variable
            name="viewModel"
            type="com.team25.event.planner.product_service.viewModels.ServiceViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{viewModel.name}"
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Service Name" />

                <TextView
                    android:id="@+id/textDescriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.description}"
                    tools:text="Service Description" />

                <TextView
                    android:id="@+id/textPriceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("%.2f $", viewModel.price)}'
                    tools:text="100.00" />

                <TextView
                    android:id="@+id/textDiscountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("%.2f %", viewModel.discount)}'

                    tools:text="10%"
                    />

                <TextView
                    android:id="@+id/textSpecificsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specifics:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textSpecifics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.specifics}"
                    tools:text="Specific details about the service" />

                <TextView
                    android:id="@+id/textDurationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("%.2f h", viewModel.duration)}'
                    tools:text="2 hours" />

                <TextView
                    android:id="@+id/textMinimumArrangementLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Arrangement:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textMinimumArrangement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("%.2f h", viewModel.minimumArrangement)}'
                    tools:text="5 people" />

                <TextView
                    android:id="@+id/textMaximumArrangementLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximum Arrangement:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textMaximumArrangement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("%.2f h", viewModel.maximumArrangement)}'

                    tools:text="50 people" />

                <TextView
                    android:id="@+id/textReservationDeadlineLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation Deadline:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textReservationDeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("%.2f day(s)", viewModel.reservationDeadline)}'

                    tools:text="2025-12-31" />

                <TextView
                    android:id="@+id/textCancellationDeadlineLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancellation Deadline:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textCancellationDeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("%.2f day(s)", viewModel.cancellationDeadline)}'

                    tools:text="2025-12-15" />

                <TextView
                    android:id="@+id/textReservationTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation Type:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textReservationType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.reservationTypeService}"
                    tools:text="Manual" />

                <TextView
                    android:id="@+id/textOfferingCategoryNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offering Category:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textOfferingCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.offeringCategoryName}"
                    tools:text="Event Services" />

                <TextView
                    android:id="@+id/textEventTypeNamesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Types:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textEventTypeNames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Wedding, Birthday, Corporate" />

                <TextView
                    android:id="@+id/textOwnerNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner info:"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.ownerName}"
                    tools:text="John Doe" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chat with owner"
                        android:layout_marginRight="10sp"
                        android:id="@+id/chatButton"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:text="View owner company"
                        android:id="@+id/viewOwnerButton"/>
                </LinearLayout>
                <Button
                    android:id="@+id/book_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_a_service"
                    android:visibility="gone"
                    >
                </Button>
            </LinearLayout>
        </ScrollView>



    </LinearLayout>


</layout>