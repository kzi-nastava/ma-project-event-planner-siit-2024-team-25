<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.team25.event.planner.user.viewmodels.PublicProfileViewModel" />

        <import type="android.view.View" />

        <import type="com.team25.event.planner.user.model.UserRole" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Profile Header Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Profile Picture -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_profile_pic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImageView" />

                    <!-- Full Name -->
                    <TextView
                        android:id="@+id/tv_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.user.firstName + ' ' + viewModel.user.lastName}"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        tools:text="John Doe" />

                    <!-- Event Organizer Specific Info -->
                    <LinearLayout
                        android:id="@+id/organizer_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.isOrganizer ? View.VISIBLE : View.GONE}">

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textAppearance="?attr/textAppearanceBody2" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Company Info Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/company_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isOwner ? View.VISIBLE : View.GONE}"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/profile_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.owner.companyName}"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginBottom="8dp"
                        tools:text="Company Name" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.owner.description}"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="16dp"
                        tools:text="Company Description" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{String.format("Contact: %s", viewModel.owner.contactPhone)}'
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginBottom="8dp"
                        tools:text="Contact: +1234567890" />

                    <TextView
                        android:id="@+id/tv_company_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginBottom="8dp"
                        tools:text="123 Business St, City, Country" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/showOnMapButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:text="@string/show_on_map"
                        app:icon="@drawable/ic_location"
                        android:layout_marginBottom="16dp" />

                    <!-- Company Pictures Gallery -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_company_pictures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:clipToPadding="false"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Report button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/report_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_user"
                android:layout_marginTop="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_report"
                app:layout_constraintTop_toBottomOf="@id/company_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>