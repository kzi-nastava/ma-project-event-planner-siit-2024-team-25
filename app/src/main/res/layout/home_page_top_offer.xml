<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@android:color/darker_gray"
    app:cornerRadius="8dp"
    android:elevation="4dp"
    android:id="@+id/top_offer_card_item"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/primary">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="70dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary">


            <TextView
                android:id="@+id/top_offer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:width="180dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/top_offer_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_offer_name"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="italic"
                android:paddingLeft="10dp"/>


            <TextView
                android:id="@+id/top_offer_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/top_offer_owner"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="italic"
                android:paddingLeft="10dp"/>

            <ImageView
                android:id="@+id/top_offer_star_image"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_below="@id/top_offer_owner"
                android:contentDescription="Offering image"
                android:layout_toRightOf="@id/top_offer_rating"
                android:scaleType="fitStart"
                />

            <TextView
                android:id="@+id/top_offer_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_offer_owner"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="italic"
                android:paddingRight="20dp"/>
        </RelativeLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
