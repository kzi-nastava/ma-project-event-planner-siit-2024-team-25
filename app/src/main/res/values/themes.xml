<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EventPlanner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/primary_orange_700</item>
        <item name="colorPrimaryVariant">@color/primary_orange_900</item>
        <item name="colorPrimaryContainer">@color/primary_orange_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/text_900</item>

        <item name="colorSecondary">@color/secondary_cyan_700</item>
        <item name="colorSecondaryVariant">@color/secondary_cyan_900</item>
        <item name="colorSecondaryContainer">@color/secondary_cyan_300</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/secondary_cyan_900</item>

        <item name="colorError">@color/accent_red</item>
        <item name="colorErrorContainer">#FFEDEB</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@color/accent_red</item>

        <!-- Surface and background colors -->
        <item name="android:colorBackground">@color/bg_light_primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/primary_orange_300</item>
        <item name="colorOnSurface">@color/text_900</item>
        <item name="colorOnSurfaceVariant">@color/text_700</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary_orange_700</item>
        <item name="android:navigationBarColor">@color/bg_light_primary</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Navigation drawer-->
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/primary_orange_700</item>

        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/primary_orange_300</item>
        <item name="colorControlActivated">@color/primary_orange_700</item>

        <!-- Text appearances -->
        <item name="android:textColorPrimary">@color/text_900</item>
        <item name="android:textColorSecondary">@color/text_700</item>
        <item name="android:textColorHint">@color/text_500</item>
    </style>

    <style name="Theme.EventPlanner" parent="Base.Theme.EventPlanner" />
    <style name="FullScreenBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
</resources>