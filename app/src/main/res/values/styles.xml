<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
    </style>

    <style name="RoundedImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CalendarDayHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.8</item>
    </style>
</resources>